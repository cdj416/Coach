<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/headImg"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                app:riv_corner_radius="44dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_head_img"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/headImg"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/studentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_16"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Valentina"/>
                    <TextView
                        android:id="@+id/atShopMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在店"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginStart="4dp"
                        android:textSize="10sp"
                        android:textColor="@color/color_FFFFFF"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/shape_radius16_ffb743"/>
                    <TextView
                        android:id="@+id/departureMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="离店"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginStart="4dp"
                        android:textSize="10sp"
                        android:textColor="@color/color_FFFFFF"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/shape_radius16_cccccc"/>
                    <TextView
                        android:id="@+id/newMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新会员"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginStart="4dp"
                        android:textSize="10sp"
                        android:textColor="@color/color_FFFFFF"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/shape_radius16_1fd3b9"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/lastGet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="8dp"
                    android:text="距离上次上课6天"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:gravity="right">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/courseNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FF333333"
                        android:text="10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_12"
                        android:text="/节"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_FF999999"
                    android:layout_marginTop="8dp"
                    android:text="私教课"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_EEEEEE"/>
        <Button
            android:id="@+id/callTel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_FFFFFF"
            android:textColor="@color/color_FF333333"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:text="联系学员"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
